<phpunit bootstrap="bootstrap.php"
		colors="false"
		convertErrorsToExceptions="true"
		convertNoticesToExceptions="true"
		convertWarningsToExceptions="true"
		stopOnFailure="false">

	<filter>
		<whitelist addUncoveredFilesFromWhitelist="false" >
			<directory suffix=".php">/var/www/cloudbudgets.com/protected/components</directory>
			<directory suffix=".php">/var/www/cloudbudgets.com/protected/models</directory>
		</whitelist>
	</filter>

	<logging>
		<log type="NOcoverage-html" target="/var/www/cloudbudgets.com/protected/tests/report/codecoverage" charset="UTF-8" yui="true" highlight="false" lowUpperBound="35" highLowerBound="70"/>
		<log type="testdox-html" target="/var/www/cloudbudgets.com/protected/tests/report/testdox.html"/>
		<log type="junit" target="/var/www/cloudbudgets.com/protected/tests/report/report.xml" logIncompleteSkipped="false"/>
	</logging>

</phpunit>